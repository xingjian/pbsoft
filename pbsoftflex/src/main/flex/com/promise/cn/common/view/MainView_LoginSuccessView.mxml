<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
					  xmlns:s="library://ns.adobe.com/flex/spark" creationComplete="init()" 
					  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:view="com.promise.cn.framework.view.*" xmlns:view1="com.promise.cn.common.view.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.promise.cn.common.vo.PBUser;
			import com.promise.cn.framework.event.AppEvent;
			import com.promise.cn.framework.util.Global;
			import com.promise.cn.framework.util.PBConstant;
			import com.promise.cn.plan.view.PlanManagerView;
			
			import mx.core.IVisualElement;
			
			//初始化方法
			private function init():void{
				AppEvent.addListener(PBConstant.APP_LOGINSUCCESS,loginSuccessHandler);
			}
			
			//登录成功
			private function loginSuccessHandler(event:AppEvent):void{
				var navigationView:NavigationView = new NavigationView();
				navigationView.addEventListener(PBConstant.APP_NAVIGATION_LISTCHANGE,tileClick);
				leftGroup.removeAllElements();
				leftGroup.addElement(navigationView);
			}
			
			//更换右边面板
			private function tileClick(event:AppEvent):void{
				var url:String  = event.data as String;
				switch(url){
					case 'menuManager':
						rightGroupAddElement(new MenuManagerView());
						break;
					case 'userManager':
						rightGroupAddElement(new UserManagerView());
						break;
					case 'planManager':
						rightGroupAddElement(new PlanManagerView());
				} 
			}
			
			//添加右边面板
			private function rightGroupAddElement(element:IVisualElement):void{
				rightGroup.removeAllElements();
				rightGroup.addElement(element);
			}
		]]>
	</fx:Script>
	<mx:HDividedBox id="hdb" width="100%" height="100%">
		<s:Group id="leftGroup" width="200" height="100%">
		</s:Group>
		<s:Group id="rightGroup" width="100%" height="100%">
		</s:Group>
	</mx:HDividedBox>
</s:Group>
